{% extends 'InventaDespesasBundle::single.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block singlecontent %}
<div class="fos_user_user_show">
    <h1>Utilizadores</h1>
    <table id="expensestable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Tipo de Utilizador</th>
                <th>Editar</th>

            </tr>
        </thead>
        <tbody data-link="row" class="rowlink">
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td> {{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == 'ROLE_USER' %}
                                Cliente
                            {% endif %}
                            {% if role == 'ROLE_ADMIN' %}
                                Administrador
                            {% endif %}
                            {% if role == 'ROLE_SUPER_ADMIN' %}
                                Master
                            {% endif %}
                        {% endfor %}
                    </td>
                    
                    <td> <a href="{{ path('fos_admin_update_users', { 'username':  user.username }) }}"><button class="btn btn-primary">Gerir</button></a></td>
                </tr>
            {% endfor %}
                
        </tbody>
        
    </table>
</div>
{% endblock %}